<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".ViewControllers.Detail.InstructorDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/instructorDetailNameCaption"
            style="@style/custom_headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_caption"/>


        <EditText
            android:id="@+id/editTextInstructorDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructorDetailNameCaption"
            android:hint="@string/hint_enter_name"
            android:importantForAutofill="no"
            android:inputType="textCapWords"
            android:minHeight="48dp"
            android:textColorHint="#546E7A" />


        <TextView
            android:id="@+id/instructorDetailEmailCaption"
            style="@style/custom_headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextInstructorDetailName"
            android:layout_marginTop="10dp"
            android:text="@string/email_title" />

        <EditText
            android:id="@+id/editTextInstructorDetailEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructorDetailEmailCaption"
            android:hint="@string/hint_enter_email"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="#546E7A" />

        <TextView
            android:id="@+id/instructorDetailPhoneCaption"
            style="@style/custom_headline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextInstructorDetailEmail"
            android:layout_marginTop="10dp"
            android:text="@string/phone_number_title" />

        <EditText
            android:id="@+id/editTextInstructorDetailPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructorDetailPhoneCaption"
            android:hint="@string/hint_enter_phone_number"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColorHint="#546E7A" />
    </RelativeLayout>
</ScrollView>